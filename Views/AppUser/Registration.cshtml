@using ZavrsniSeminarskiRad.Models.Binding
@model UserBinding

@{
    ViewData["Title"] = "Registration";
}

<h1>Registration</h1>

<h4>UserBinding</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h3>Registriraj se</h3>
            </div>
            <div class="card-body">
                <form asp-action="Registration">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Sourname" class="control-label"></label>
                        <input asp-for="Sourname" class="form-control" />
                        <span asp-validation-for="Sourname" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(x=>x.UserAdress.City, new {@class = "control-label"})
                        @Html.TextBoxFor(x=>x.UserAdress.City, new {@class = "form-control"})
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(x=>x.UserAdress.Street, new {@class = "control-label"})
                        @Html.TextBoxFor(x=>x.UserAdress.Street, new {@class = "form-control"})
                    </div>

                    <div class="form-group">
                        <label asp-for="DOB" class="control-label"></label>
                        <input asp-for="DOB" class="form-control" />
                        <span asp-validation-for="DOB" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <p>

                    </p>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>

                </form>
            </div>
            <div class="card-footer">
            </div>
        </div>

    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
<div class="mb-3"></div>




@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
